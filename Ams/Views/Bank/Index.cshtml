@model IEnumerable<Ams.Models.Bank>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" style="margin-top: 1%;">
    <div class="col-2">
        <div class="form-group">
            <label for="">Bank</label>
            <select class="typeahead form-control" name="name_search">
                <option value="">Select</option>
              


            </select>
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label for="">Account No</label>
           <input type="text" />
               

               

         
        </div>
    </div>
    </div>

<h3 style="text-align:center">Bank Details</h3>

<p>
    <button class="btn-primary"><a asp-action="Create"></a>Create New</button>
</p>
<table class="table table-bordered table-striped table-hover table-sn ">
    <thead>
        <tr class="table-primary">
            <th>
               Name
            </th>
            <th>
                Account No
            </th>
            <th>
                Address
            </th>
            <th>
               Contact
            </th>
          
            
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Bank_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account_no)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                
                <td>
                    <a class="btn btn-outline-primary btn-sm" style="--bs-btn-padding-y: .10rem; --bs-btn-padding-x: .4rem; --bs-btn-font-size: .75rem; border-radius:7px;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-outline-primary btn-sm" style="--bs-btn-padding-y: .10rem; --bs-btn-padding-x: .4rem; --bs-btn-font-size: .75rem; border-radius:7px;" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-outline-danger btn-sm" style="--bs-btn-padding-y: .10rem; --bs-btn-padding-x: .4rem; --bs-btn-font-size: .75rem; border-radius:7px;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
