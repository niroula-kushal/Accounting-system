@model Ams.ViewModels.IncomeExpensesReportVm
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime DefaultDate = DateTime.Today;

}


<form method="get">
    <div style="margin:auto; width:98%; ">

    <div style="margin-top:2%">
<div class="row">
    <div class="col-2">
        <div class="form-group">
            <label for="fromDate">Date from</label>
                    <input class="form-control" value="@DefaultDate.ToString("yyyy-MM-dd")" type="date" id="fromDate" name="fromDate" />
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label for="toDate">Date to</label>
                    <input class="form-control" value="@DefaultDate.ToString("yyyy-MM-dd")" type="date" id="toDate" name="toDate" />
        </div>
    </div>
    <div  class="col-2">
        <div class="form-group">
            <button style="margin-top:12%;" class="btn btn-primary" name="search">Go</button>
        </div>
    </div>
</div>
</div>
<div class="row" style="margin-top:3%;">
    <h3 style="text-align:center;">Payalbe & Receivable Report</h3>
 
    <div class="col-6 p-0">


        <table class="table table-bordered  table-hover table-sn">

            <thead>

                <tr class="table-secondary">
                    <th class="text-left" colspan="3">
                        Payalbe
                    </th>
                </tr>
                <tr>

                    <th>Particulars</th>
                    <th>lf</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.payableReports)
                {
                    <tr>
                        <td>@item.ledger_name</td>
                        <td></td>
                        <td>@item.remaining</td>
                    </tr>
                }

                <tr>
                    <th class="text-left" colspan="2">Total</th>
                </tr>

            </tbody>
        </table>
    </div>
    <div class="col-6 p-0">
        <table class="table table-bordered  table-hover table-sn ">

            <thead>
                <tr class="table-secondary">
                    <th class="text-left" colspan="3">
                        Receivable
                    </th>
                </tr>
                <tr>

                    <th>Particulars</th>
                    <th>lf</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.receivableReports)
                {
                    <tr>
                        <td>@item.ledger_name</td>
                        <td></td>
                        <td>@item.remaining</td>
                    </tr>
                }
                <tr>
                    <th class="text-left" colspan="2">Total</th>
                </tr>
            </tbody>
        </table>

    </div>
 
</div>
</div>
</form>