@model Ams.ViewModels.IncomeExpensesReportVm
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime DefaultDate = DateTime.Today;
}

<form method="get">
    <div style="margin:auto; width:98%; ">
    <div style="margin-top:2%">
<div class="row">
    <div class="col-2">
        <div class="form-group">
            <label for="fromDate">Date from</label>
                    <input class="form-control" value="@DefaultDate.ToString("yyyy-MM-dd")" type="date" id="fromDate" name="fromDate" />
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label for="toDate">Date to</label>
                    <input class="form-control" value="@DefaultDate.ToString("yyyy-MM-dd")" type="date" id="toDate" name="toDate" />
        </div>
    </div>
    <div  class="col-2">
        <div class="form-group">
            <button style="margin-top:12%;" class="btn btn-primary" name="search">Go</button>
        </div>
    </div>
</div>
</div>

<h3 style="text-align:center">Bank Statement</h3>

<p>
    <button class="btn-primary"><a asp-action="Create"></a>Create New</button>
</p>
<table class="table table-bordered table-striped table-hover table-sn ">
    <thead>
        <tr class="table-primary">
            <th>
                Date
            </th>

            <th>
                Ledger
            </th>

            <th>
                Dr
            </th>
            <th>
                Cr
            </th>
            <th>
                Transaction type
            </th>

        </tr>

    <tbody>
            @foreach (var item in Model.BankStatement)
            {
            <tr>
                <td>
                        @Html.DisplayFor(modelItem => item.t_date)
                </td>

                <td>
                        @Html.DisplayFor(modelItem => item.ledger)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.dr_amount)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.cr_amount)
                </td>


                <td>
                        @Html.DisplayFor(modelItem => item.type)
                </td>
            </tr>
            }
    </tbody>
</table>
</div>
</form>